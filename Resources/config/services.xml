<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="os2display.exchange_service" class="Os2Display\ExchangeBundle\Service\ExchangeService">
            <argument type="service" id="os2display.exchange_web_service"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%os2display_exchange_enabled%</argument>
            <tag name="kernel.event_listener" event="ik.cron" method="onCron" />
        </service>

        <service id="os2display.exchange_web_service" class="Os2Display\ExchangeBundle\Service\ExchangeWebService"
                 public="true">
            <argument type="service" id="os2display.exchange_soap_client"/>
        </service>

        <service id="os2display.exchange_soap_client"
                 class="Os2Display\ExchangeBundle\Service\ExchangeSoapClientService" public="true">
            <argument>%os2display_exchange_host%</argument>
            <argument>%os2display_exchange_user%</argument>
            <argument>%os2display_exchange_password%</argument>
            <argument>%os2display_exchange_version%</argument>
        </service>
    </services>
</container>
